<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.binla.bcs.repository.IUserRepository">

    <resultMap id="userMap" type="com.binla.bcs.domain.User">
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="role" property="role"/>
        <result column="salt" property="salt"/>
        <result column="pic" property="pic"/>
        <result column="color_identity" property="colorIdentity"/>
        <result column="insert_user" property="insertUser"/>
        <result column="insert_date" property="insertDate"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_date" property="updateDate"/>
    </resultMap>

    <select id="countUser" resultType="Integer">
        SELECT count(1)
        FROM tab_user
    </select>

    <select id="listUser" resultMap="userMap">
        SELECT  code,
                name,
                password,
                role,
                salt,
                pic,
                color_identity,
                insert_user,
                insert_date,
                update_user,
                update_date
        FROM tab_user
    </select>

    <select id="getByName" resultMap="userMap">
        SELECT  code,
                name,
                password,
                role,
                salt,
                pic,
                color_identity,
                insert_user,
                insert_date,
                update_user,
                update_date
        FROM tab_user
        WHERE username=#{userName}
    </select>

    <select id="getByNamePassword" resultMap="userMap">
        SELECT  code,
                name,
                password,
                role,
                salt,
                pic,
                color_identity,
                insert_user,
                insert_date,
                update_user,
                update_date
        FROM tab_user
        WHERE username=#{userName}
        AND password=#{password}
    </select>

    <select id="getByCode" resultMap="userMap">
        SELECT  code,
                name,
                password,
                role,
                salt,
                pic,
                color_identity,
                insert_user,
                insert_date,
                update_user,
                update_date
        FROM tab_user
        WHERE code=#{code}
    </select>

    <select id="getByCodePassword" resultMap="userMap">
        SELECT  code,
                name,
                password,
                role,
                salt,
                pic,
                color_identity,
                insert_user,
                insert_date,
                update_user,
                update_date
        FROM tab_user
        WHERE code=#{code}
        AND password=#{password}
    </select>


</mapper>